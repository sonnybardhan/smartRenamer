{
  "name": "smart-renamer",
  "version": "1.0.0",
  "description": "A beautiful desktop app for batch renaming files with smart rules",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.smartrenamer.app",
    "productName": "Smart Renamer",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "file",
    "rename",
    "batch",
    "utility"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  }
}
